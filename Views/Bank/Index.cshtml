@{
}
@model List<BankBranch>
@using(Html.BeginForm("Index", "Bank", FormMethod.Get))
{
    @Html.TextBox("Search")
    <input type="submit" value="Search" />
}
<table class="table rounded-corners" style="margin-top: 10px">
    <thead >
        <td>#</td>
        <td>Name</td>
        <td>Location</td>
        <td>Manager</td>
        <td>Employee Count</td>
        <td></td>
        <td></td>
    </thead>
    <tbody>
        @foreach(BankBranch branch in Model)
        {
            <tr>
                <td>@branch.Id</td>
                <td><a href="/Bank/Details/@branch.Id">@branch.LocationName</a></td>
                <td><a href="@branch.LocationURL">@branch.LocationURL</a></td>
                <td>@branch.BranchManager</td>
                <td>@branch.EmployeeCount</td>
                <td>
                    <button class="btn" style="border: 0" type="button" onclick="location.href = 'Bank/Edit/@branch.Id'">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                        </svg>
                    </button>
                </td>
                <td><button class="btn btn-outline-danger" type="button" onclick="confirm('Are you sure you want to delete this branch?') ? location.href = '/Bank/Delete/@branch.Id' : false">Remove</button></td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary" type="button" onclick="location.href = '@Url.Action("AddBranch", "Bank")'">Add Branch</button>